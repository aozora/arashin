   block head

   div.navbar.navbar-inverse.navbar-fixed-top
      div.navbar-inner
         div.container
            button.btn.btn-navbar(data-toggle="collapse", data-target=".nav-collapse")
               span.icon-bar
               span.icon-bar
               span.icon-bar
            a.brand(href='/') #{appName}
            div.nav-collapse.collapse
               ul.nav
                  li.active
                     a(href='/') Home
                  li
                     a(href='#about') About
                  li
                     a(href='#contact') Contact


               if (request.isAuthenticated())
                  ul.nav.pull-right
                     li#fat-menu.dropdown
                        a#drop3.dropdown-toggle(data-toggle="dropdown", role="button", href="#")
                           | #{current_user.name.displayName}
                           b.caret
                        ul.dropdown-menu(aria-labelledby="drop3", role="menu")
                           li
                              a(href="/dashboard", tabindex="-1") Dashboard
                           li.divider
                           li
                              a(href="/logout", tabindex="-1") Logout
               else
                  ul.nav.pull-right
                     li
                        a(href="/login", title="Login") Login

   != messages()


   block body


   footer.footer
      div.container
         p.pull-right
            a(href='#') Back to top
